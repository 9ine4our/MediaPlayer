<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Media Player with Preview</title>
    <link rel="stylesheet" href="styles.css">

<style>
/* styles.css */
body {
    font-family: Arial, sans-serif;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    background-color: #f0f0f0;
}

.media-player {
    position: relative;
}

.timeline {
    position: relative;
    width: 600px;
    height: 10px;
    background-color: #ccc;
    cursor: pointer;
    margin-top: 10px;
}

.preview {
    position: absolute;
    top: -150px;
    width: 150px;
    height: 90px;
    background-color: #000;
    display: none;
}
</style>
</head>
<body>
    <div class="media-player">
        <video id="video" width="600" controls>
            <source src="your-video-file.mp4" type="video/mp4">
            Your browser does not support the video tag.
        </video>
        <div class="timeline" id="timeline">
            <div class="preview" id="preview"></div>
        </div>
    </div>
    <script src="script.js"></script>
<script>
// script.js
const video = document.getElementById('video');
const timeline = document.getElementById('timeline');
const preview = document.getElementById('preview');

timeline.addEventListener('mousemove', (e) => {
    const rect = timeline.getBoundingClientRect();
    const position = (e.pageX - rect.left) / rect.width;
    const time = position * video.duration;

    preview.style.left = `${e.pageX - rect.left}px`;
    preview.style.display = 'block';

    // Mengambil snapshot dari video
    const canvas = document.createElement('canvas');
    canvas.width = 150;
    canvas.height = 90;
    const ctx = canvas.getContext('2d');

    video.currentTime = time;
    video.addEventListener('seeked', function() {
        ctx.drawImage(video, 0, 0, canvas.width, canvas.height);
        preview.style.backgroundImage = `url(${canvas.toDataURL()})`;
    }, { once: true });
});

timeline.addEventListener('mouseout', () => {
    preview.style.display = 'none';
});
</script>
</body>
</html>
